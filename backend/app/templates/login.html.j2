{% extends "base.html.j2" %}

{% block title %}Login - SkillSwap{% endblock %}

{% block content %}
<div class="login-wrapper">
  <div class="login-card">
    <div class="sub-heading">Login</div>
    <form method="POST">
      {{ form.hidden_tag() }}

      <div class="form-group">
        {{ form.username.label(class="label") }}
        {{ form.username(class="form-input", placeholder="Enter Username", size=32) }}
      </div>

      <div class="form-group">
        {{ form.password.label(class="label") }}
        {{ form.password(class="form-input", placeholder="Enter Password", size=32) }}
      </div>

      <div class="form-submit-wrapper">
        {{ form.submit(class="btn-login", id="submit") }}
      </div>
    </form>

    <p class="register-now">
      Don't have an account? <a href="{{ url_for('auth.register') }}">Register</a>
    </p>
  </div>
</div>
{% endblock %}