<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>{% block title %}SkillSwap{% endblock %}</title>
  <link href="{{ url_for('static', filename='styles.css') }}" rel="stylesheet" />
</head>

<body>
  <header>
    <div class="nav-center">
      {# {% if current_user.is_admin %}
      <a class="btn-login" href="{{url_for('admin_dashboard')}}">Admin Dashboard</a>
      {% endif %}

      {% if current_user.is_authenticated %}
      <a class="btn-login" href="{{ url_for('logout') }}">Logout </a>
      <a class="btn-login" href="{{ url_for('dashboard') }}">Dashboard</a>
      <a class="btn-login" href="{{ url_for('edit_profile') }}">Edit Profile</a>
      {% else %}
      <a class="btn-login" href="{{ url_for('login') }}">Login</a>
      <a class="btn-login" href="{{ url_for('register') }}">Register</a> #}

      {# {% endif %} #}
    </div>
  </header>
  <main>
    {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
      <div class="flashes">
    <ul>
      {% for category, message in messages %}
      <div class="flash-message 
      <li
        style="color: {% if category == 'danger' %}red{% elif category == 'success' %}green{% else %}black{% endif %};">
        {{ message }}
      </li>
      {% endfor %}
    </ul>
    {% endif %}
    {% endwith %}
  </div>
  </div>
    {% block content %}{% endblock %}
  </main>
</body>

</html>