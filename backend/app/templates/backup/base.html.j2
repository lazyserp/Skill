<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>{% block title %}SkillSwap{% endblock %}</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
</head>

<body>
  <header>
    <div class="superheading"><a href="/">SkillSwap</a></h1> </div>
    <div class="nav">
    {% if current_user.is_admin %}
    <a href="{{url_for('admin_dashboard')}}" class="login">Admin Dashboard</a>
    {% endif %}

    {% if current_user.is_authenticated %}
    <a href="{{ url_for('logout') }}" class="login">Logout  </a>
    <a href="{{ url_for('dashboard') }}" class="login">Dashboard</a> 
    <a href="{{ url_for('edit_profile') }}" class="login">Edit Profile</a> 
    {% else %}
    <a href="{{ url_for('login') }}" class="login">Login</a>
    <a href="{{ url_for('register') }}" class="login">Register</a>

    {% endif %}
    </div>

  </header>

  <main>
    {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
    <ul>
      {% for category, message in messages %}
      <li
        style="color: {% if category == 'danger' %}red{% elif category == 'success' %}green{% else %}black{% endif %};">
        {{ message }}
      </li>
      {% endfor %}
    </ul>
    {% endif %}
    {% endwith %}

    {% block content %}{% endblock %}
  </main>
</body>

</html>